<header class="header">
  <button class="menu-mobile">
    <a href="/menuOculto.html"
      ><img
        class="menu-mobile__imagem"
        src="/images/menu.svg"
        alt="Menu mobile"
    /></a>
  </button>
  <img
    class="logo--mobile"
    src="/images/logo-horizontal.svg"
    alt="Logo do website"
  />
  <div class="pesquisa-e-compras">
    <img class="pesquisa" src="/images/icone-lupa.svg" alt="Pesquisar" />
    <img
      class="carrinho-de-compras"
      src="/images/icone-compras.svg"
      alt="Carrinho de compras"
    />
  </div>
</header>

<header class="header__medium-devices">
  <a class="menu__desktop" href="/">
    <img
      class="menu__logo"
      src="/images/logo-horizontal.svg"
      alt="logotipo desktop"
      width="110px"
      height="65px"
    />
  </a>

  <div class="menu__searchbar">
    <div class="menu__loupe">
      <img
        class="menu__loupe--img"
        src="/images/menu-desktop/lupa-preta.png"
        onclick=""
      />
    </div>
    <form class="menu__searchbar__form">
      <input
        class="menu__searchbar-input"
        type="text"
        id="searchbar"
        name="searchbar"
        placeholder="Buscar"
      />
    </form>
  </div>

  <div class="menu__login-and-user">
    <% if (typeof usuario === "undefined") {%>
      <div class="menu__buttons">
        <a href="/login">
          <button class="menu__btn menu__btn--login">
            Entrar
          </button>
        </a>
        <a href="/cadastroUsuario">
          <button class="menu__btn menu__btn--cadastro">
            Casdastre-se
          </button>
        </a>
      </div>
    <% } else { %>
      <p class="menu__greetings">Bem vindo, <%= usuario.nomeUsuario %>  </p>
      <a href="/logout">
        <button class="menu__btn menu__btn--logout">
          Sair
        </button>
      </a>
    <% } %> 

    <div class="menu__user">
      <a class="user" href="/conta">
        <img
          class="user-login"
          src="/images/menu-desktop/user.svg"
          alt="login do usuÃ¡rio"
          width="60px"
          height="60px"
      /></a>
    </div>
  </div>
</header>
